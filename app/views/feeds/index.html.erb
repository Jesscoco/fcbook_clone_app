<% content_for :head do %>
  <title>List |Facebook- Clone</title>
<% end %>
<h1>Liste des feeds</h1>
<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>Published by</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= feed.comment %></td>
        <td><%= feed.user.name %></td> 
        <td><%= link_to "Show" , feed_path(feed.id) %></td>
        <td><%= link_to "Edit" , edit_feed_path(feed.id) %></td>
        <td><%= link_to "Destroy" , feed ,method: "delete", data: {confirm: "Etes vous sur de vouloir supprimer?"} %> </td>
      </tr>     
    <% end %>
  </tbody>
</table>
  <%= link_to 'Ajouter un nouveau feed', new_feed_path %>
